<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="bookmark-ds" transaction-type="RESOURCE_LOCAL">
    <class>br.com.orcafacil.server.domain.Categoria</class>
    <class>br.com.orcafacil.server.domain.Estado</class>
    <class>br.com.orcafacil.server.domain.Marca</class>
    <class>br.com.orcafacil.server.domain.Municipio</class>
    <class>br.com.orcafacil.server.domain.Pontuacao</class>
    <class>br.com.orcafacil.server.domain.PrecoProduto</class>
    <class>br.com.orcafacil.server.domain.Produto</class>
    <class>br.com.orcafacil.server.domain.Cliente</class>
    <class>br.com.orcafacil.server.domain.Entidade</class>
    <class>br.com.orcafacil.server.domain.Fornecedor</class>
    <class>br.com.orcafacil.server.domain.pedido.Pedido</class>
    <class>br.com.orcafacil.server.domain.pedido.ItemDoPedido</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/OrcaFacil"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
    </properties>
  </persistence-unit>
</persistence>
